{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "outDir": "dist",
        "lib": [
            "ESNext",
            "dom"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "strict": true,
        "isolatedModules": true,
        "declaration": true,
        "baseUrl": ".",
        "sourceMap": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "incremental": true
    },
    "include": [
        "./src/**/*"
    ]
}